%=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
%	PACKAGE OPTIONS & SETUP
%=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mhotables}[2021/07/21 A small tabularray customization package.]


% > > > Tables
\RequirePackage{tabularray}
\UseTblrLibrary{diagbox}  % Enable diagonal boxes
\UseTblrLibrary{booktabs} % Support for booktabs


% > > > Table of values commands to be used with tabularray
\NewTableCommand\cellRed{\SetCell{bg=nordEleven,fg=nordSix}}
\NewTableCommand\cellGreen{\SetCell{bg=nordFourteen,fg=nordSix}}
\NewTableCommand\cellPurple{\SetCell{bg=nordFifteen,fg=nordSix}}
\NewTableCommand\cellOrange{\SetCell{bg=nordTwelve,fg=nordSix}}
\NewTableCommand\cellTeal{\SetCell{bg=nordEight,fg=nordSix}}
\NewTableCommand\cellGrey{\SetCell{bg=nordFour}}


%  END =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
%=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
\endinput
